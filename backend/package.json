{
  "name": "aws-shopping-cart-backend",
  "version": "0.1.0",
  "main": "handler.js",
  "scripts": {
    "serve": "concurrently --kill-others \"npm run serve-lambda\" \"npm run serve-dynamodb\"",
    "serve-lambda": "sls offline --host localhost -P 5000 --color",
    "serve-dynamodb": "sls dynamodb install && sls dynamodb start --migrate"
  },
  "author": "Victor Ciappina",
  "license": "ISC",
  "devDependencies": {
    "serverless-offline": "^5.4.0"
  },
  "dependencies": {
    "concurrently": "^5.2.0",
    "serverless-dynamodb-local": "^0.2.39"
  }
}
